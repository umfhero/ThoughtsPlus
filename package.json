{
  "name": "thoughts-plus",
  "version": "6.0.7",
  "author": "umf",
  "main": "dist-electron/main.js",
  "description": "ThoughtsPlus Suite",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:compile": "tsc && vite build",
    "build:installer": "npm run build:compile && electron-builder && makensis installer.nsi",
    "build:appx": "npm run build",
    "build:mac": "npm run build:compile && electron-builder --mac --publish never",
    "build:linux": "npm run build:compile && electron-builder --linux --publish never",
    "build:all": "npm run build:compile && electron-builder --mac --linux --win --publish never",
    "preview": "vite preview",
    "download:fonts": "powershell -ExecutionPolicy Bypass -File ./download-fonts.ps1",
    "cert:check": "npm run build:compile && npm run test:build",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/papaparse": "^5.5.0",
    "@types/prismjs": "^1.26.5",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "canvas-confetti": "^1.9.4",
    "cheerio": "^1.1.2",
    "chokidar": "^5.0.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "electron-winstore-auto-launch": "^2.0.6",
    "framer-motion": "^11.0.8",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.344.0",
    "mammoth": "^1.11.0",
    "nspell": "^2.1.5",
    "openai": "^6.15.0",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^4.8.69",
    "pptx2json": "^0.0.10",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-activity-calendar": "^3.0.1",
    "react-dom": "^18.2.0",
    "react-github-calendar": "^5.0.0",
    "react-pdf": "^9.1.1",
    "recharts": "^3.4.1",
    "shepherd.js": "^14.5.1",
    "tailwind-merge": "^2.2.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "copy-webpack-plugin": "^13.0.1",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.35",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.thoughtsplus.app",
    "productName": "ThoughtsPlus",
    "removePackageScripts": true,
    "extraResources": [
      {
        "from": "public/ThoughtsPlus.png",
        "to": "ThoughtsPlus.png"
      },
      {
        "from": "public/ThoughtsPlus.ico",
        "to": "ThoughtsPlus.ico"
      },
      {
        "from": "public/app-icons",
        "to": "app-icons"
      },
      "preload-config.json",
      ".env"
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/ThoughtsPlus.ico",
      "legalTrademarks": "ThoughtsPlus",
      "publisherName": "umf"
    },
    "appx": {
      "displayName": "ThoughtsPlus",
      "publisherDisplayName": "umf",
      "identityName": "umf.ThoughtsPlus",
      "publisher": "CN=3E120A6C-AB11-4EB1-94A5-9180DCEFF0E8",
      "backgroundColor": "#F3F4F6",
      "showNameOnTiles": true,
      "addAutoLaunchExtension": true,
      "applicationId": "ThoughtsPlus",
      "languages": [
        "en-US"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ThoughtsPlus",
      "uninstallDisplayName": "ThoughtsPlus",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/ThoughtsPlus.png",
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "public/ThoughtsPlus.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/ThoughtsPlus.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "directories": {
      "output": "release"
    },
    "compression": "maximum",
    "asar": false
  }
}
