{
  "name": "calendar-plus",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "description": "Calendar Plus App",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:compile": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/papaparse": "^5.5.0",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.4.1",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.calendarplus.app",
    "productName": "Calendar Plus",
    "extraResources": [
      {
        "from": "public/calendar_icon_181520.ico",
        "to": "calendar_icon_181520.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/calendar_icon_181520.png",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "release"
    }
  }
}
